---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Fine Art Install | Wellington">
  <main class="container">
    <section class="wrapper">
      <h1 class="heading-primary">Fine Art Install</h1>

      <section class="details">
        <h2 class="heading-secondary">Picture Hanging</h2>
        <h2 class="heading-secondary">Placement</h2>
        <h2 class="heading-secondary">Delivery</h2>
        <h2 class="heading-secondary">Art Advisory</h2>
      </section>

      <section class="margin-top-3">
        <!-- <p class="heading-secondary"><a href="about.html">About</a></p> -->
        <p class="heading-secondary">
          <a href="https://www.instagram.com/fineart.install/" target="_blank"
            >Instagram</a
          >
        </p>
        <p class="heading-secondary">
          <a href="mailto:mail@fineartinstall.biz">Email</a>
        </p>
        <p class="heading-secondary number">021 217 5383</p>
      </section>

      <section class="margin-top-3">
        <h2 class="heading-secondary">Te Whanganui-a-Tara</h2>
        <h2 class="heading-secondary">Wellington</h2>
      </section>
    </section>
  </main>
</Layout>

<style>
  .container {
    color: blue;
    font-family: "Times New Roman", Times, serif;
    display: grid;
    place-items: center;
    text-align: center;
    gap: 2rem;
    height: 100%;
  }

  .heading-primary {
    letter-spacing: 2px;
    font-size: 2.157rem;
  }

  .heading-secondary {
    letter-spacing: 2px;
    font-size: 2.157rem;
  }

  .margin-top-3 {
    margin-top: 3rem;
  }

  .details {
    margin-top: 3rem;
  }

  .number {
    margin-top: 3rem;
  }

  a {
    color: inherit;
  }

  html {
    font-size: 70%;
    text-shadow: -10px 10px 10px hsla(241, 91%, 45%, 0.4);
  }

  @media (min-width: 1800px) {
    html {
      font-size: 100%;
    }
  }

  @media (max-width: 600px) {
    html {
      font-size: 55%;
    }
  }
</style>
